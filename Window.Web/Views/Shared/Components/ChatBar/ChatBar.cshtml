@model List<Window.Domain.Entities.Inquiry.LogInquiryForUserDetail>
@using Window.Domain.ViewModels.Admin
@using Window.Application.Extensions
@using Window.Application.Convertors
@using Window.Domain.ViewModels.Common

<!-- Chat Bar -->
<div id="chatbar" class="page-chatbar open">
    <div class="chatbar-contacts">

        <div class="contacts-search" style="margin-top:10px">
            <div class="col-md-6">
                <a style="margin:0px 0px 0px 0px" class="col-md-12 btn btn-labeled btn-warning refresh" id="refresh-toggler" asp-action="GetUserLastestInquiry" asp-controller="test" asp-area="">
                    <i class="btn-label glyphicon glyphicon-refresh"></i>بروز رسانی
                </a>
            </div>
            <div class="col-md-6">
                <a asp-action="InquiryStep4" asp-route-userMacAddress="@ViewBag.UserMacAddress" asp-controller="test" asp-area="" style="margin:0px 0px 0px 0px" class="col-md-12 btn btn-labeled btn-success">
                    <i class="btn-label glyphicon glyphicon-check"></i>استعلام
                </a>
            </div>
        </div>

        <ul class="contacts-list">
            @if (Model != null && Model.Any())
            {

                foreach (var item in Model)
                {
                    <li class="contact" style="pointer-events:none">
                        <div class="contact-avatar">
                            <img src="@Window.Application.StticTools.FilePaths.SampleThumbimage/@item.Sample.Image" />
                        </div>
                        <div class="contact-info">

                            <div class="contact-name">
                                <div class="row">
                                <div class="col-md-12">@item.Sample.SegmentName</div>
                                </div>
                            </div>

                            <div class="contact-status" style="margin-bottom: 25px;">
                                تعداد : @item.CountOfSample
                            </div>
                            <div class="last-chat-time">
                                                                    <div class="status" > عرض : @item.Width (cm) - طول : @item.Height (cm)</div>
                            </div>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>

</div>
<!-- /Chat Bar -->