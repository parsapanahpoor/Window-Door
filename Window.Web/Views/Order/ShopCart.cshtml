@model Window.Domain.ViewModels.Site.Shop.Order.ShopCartOrderDTO;
@using Window.Application.StaticTools;
@using Window.Application.Extensions;
@using Window.Application.StticTools

@{
    ViewData["Title"] = "سبد خرید";
    Layout = "_ShopLayout";
}

<main class="main-content dt-sl mb-3" style="margin-top: 207.967px; transform: none;">
    <div class="container main-container" style="transform: none;">
        <div class="row mx-0" style="transform: none;">
            <div class="col-xl-9 col-lg-8 col-md-12 col-sm-12 mb-2">
                <nav class="tab-cart-page">
                    <div class="nav nav-tabs border-bottom" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link d-inline-flex w-auto active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">سبد خرید<span class="count-cart">@Model.ProductItems.Count()</span></a>
                    </div>
                </nav>
            </div>
            <div class="col-12" style="transform: none;">
                <div class="tab-content" id="nav-tabContent" style="transform: none;">
                    <div class="tab-pane fade active show" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" style="transform: none;">
                        <div class="row" style="transform: none;">
                            <div class="col-xl-9 col-lg-8 col-12 px-0">
                                <div class="table-responsive checkout-content dt-sl">
                                    <div class="checkout-header checkout-header--express">
                                        <span class="checkout-header-title">ارسال کالا</span>
                                    </div>
                                    <div class="checkout-section-content-dd-k">
                                        <div class="cart-items-dd-k">

                                            @if (Model.ProductItems != null && Model.ProductItems.Any())
                                            {
                                                foreach (var productItem in Model.ProductItems)
                                                {
                                                    <div class="cart-item py-4 px-3">
                                                        <div class="item-thumbnail">
                                                            <a asp-action="ShopProductDetail"
                                                               asp-area=""
                                                               asp-controller="ShopProduct"
                                                               asp-route-productId="@productItem.Products.ProductId">
                                                                <img src="@FilePaths.ProductsPathThumb@productItem.Products.ProductImage" alt="item">
                                                            </a>
                                                        </div>
                                                        <div class="item-info flex-grow-1">
                                                            <div class="item-title">
                                                                <h2>
                                                                    <a asp-action="ShopProductDetail"
                                                                       asp-area=""
                                                                       asp-controller="ShopProduct"
                                                                       asp-route-productId="@productItem.Products.ProductId">
                                                                        @productItem.Products.ProductTitle
                                                                    </a>
                                                                </h2>
                                                            </div>
                                                            <div class="item-detail">
                                                                <ul>
                                                                    <li>
                                                                        <span class="color" style="background-color: @productItem.Products.Color.ColorCode;"></span>
                                                                        <span>@productItem.Products.Color.ColorTitle</span>
                                                                    </li>
                                                                    <li>
                                                                        <i class="far fa-store-alt text-muted"></i>
                                                                        <span>نام فروشنده : @productItem.Products.SellerInfo.SellerUsername</span>
                                                                    </li>
                                                                    <li>
                                                                        <i class="far fa-clipboard-check text-primary"></i>
                                                                        <span>موجود در انبار</span>
                                                                    </li>
                                                                </ul>
                                                                <div class="item-quantity--item-price">
                                                                    <div class="item-quantity">
                                                                        <div class="num-block">
                                                                            <div class="num-in">
                                                                                <a asp-action="PlusProductInShopCart"
                                                                                   asp-area=""
                                                                                   asp-controller="Order"
                                                                                   asp-route-productId="@productItem.Products.ProductId"
                                                                                   style="margin-top: 5px;font-weight: bold;"
                                                                                   class="plus">+</a>

                                                                                <input type="text" class="in-num" value="@productItem.Products.ProductEntity" readonly="">

                                                                                <a asp-action="MinusProductInShopCart"
                                                                                   asp-area=""
                                                                                   asp-controller="Order"
                                                                                   asp-route-productId="@productItem.Products.ProductId"
                                                                                   style="margin-top: 5px;font-weight: bold;"
                                                                                   class="minus dis">-</a>
                                                                            </div>
                                                                        </div>
                                                                        <a asp-action="DeleteProductFromShopOrder"
                                                                           asp-area=""
                                                                           asp-controller="Order"
                                                                           asp-route-ProductId="@productItem.Products.ProductId"
                                                                           class="item-remove-btn mr-3">
                                                                            <i class="far fa-trash-alt"></i>
                                                                            حذف
                                                                        </a>
                                                                    </div>
                                                                    <div class="item-price">
                                                                        @productItem.Products.ProductPrice.ToString("#,000")<span class="text-sm mr-1">ریال</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-lg-4 col-12 w-res-sidebar sticky-sidebar" style="position: relative; overflow: visible; box-sizing: border-box; min-height: 1px;">


                                <div class="theiaStickySidebar" style="padding-top: 0px; padding-bottom: 1px; position: static; transform: none; top: 0px; left: 0px;">
                                    <div class="dt-sn dt-sn--box border mb-2">
                                        <ul class="checkout-summary-summary">
                                            <li>
                                                <span>مبلغ کل (@Model.ProductItems.Count() کالا)</span><span>@Model.TotalPrice.ToString("#,000") ریال</span>
                                            </li>
                                            <li>
                                                <span>
                                                    هزینه ارسال<span class="help-sn" data-toggle="tooltip" data-html="true" data-placement="bottom" title="" data-original-title="<div class='help-container is-right'><div class='help-arrow'></div><p class='help-text'>هزینه ارسال مرسولات می‌تواند وابسته به شهر و آدرس گیرنده متفاوت باشد. در صورتی که هر یک از مرسولات حداقل ارزشی برابر با ۱۵۰هزار تومان داشته باشد، آن مرسوله بصورت رایگان ارسال می‌شود.<br>'حداقل ارزش هر مرسوله برای ارسال رایگان، می تواند متغیر باشد.'</p></div>">
                                                        <span class="mdi mdi-information-outline"></span>
                                                    </span>
                                                </span><span>وابسته به آدرس</span>
                                            </li>
                                        </ul>
                                        <div class="checkout-summary-devider">
                                            <div></div>
                                        </div>
                                        <div class="checkout-summary-content">
                                            <div class="checkout-summary-price-title">مبلغ قابل پرداخت:</div>
                                            <div class="checkout-summary-price-value">
                                                <span class="checkout-summary-price-value-amount">@Model.TotalPrice.ToString("#,000")</span>
                                                ریال
                                            </div>
                                            <a href="#" class="mb-2 d-block" >
                                                <a class="btn-primary-cm btn-with-icon w-100 text-center pr-0"
                                                   asp-action="ListOfUserLocations"
                                                   asp-area=""
                                                   asp-controller="Location"
                                                   style="margin-right: 80px;margin-bottom: 10px;">
                                                    ادامه ثبت سفارش
                                                </a>
                                            </a>
                                            <div style="margin-top:20px;">
                                                <span>
                                                    کالاهای موجود در سبد شما ثبت و رزرو نشده‌اند، برای ثبت سفارش
                                                    مراحل بعدی را تکمیل کنید.
                                                </span><span class="help-sn" data-toggle="tooltip" data-html="true" data-placement="bottom" title="" data-original-title="<div class='help-container is-right'><div class='help-arrow'></div><p class='help-text'>محصولات موجود در سبد خرید شما تنها در صورت ثبت و پرداخت سفارش برای شما رزرو می‌شوند. در صورت عدم ثبت سفارش، دیجی‌کالا هیچگونه مسئولیتی در قبال تغییر قیمت یا موجودی این کالاها ندارد.</p></div>">
                                                    <span class="mdi mdi-information-outline"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div><div class="dt-sn dt-sn--box checkout-feature-aside pt-4">
                                        <ul>
                                            <li class="checkout-feature-aside-item">
                                                <img src="/DidiKala/assets/img/svg/return-policy.svg" alt="">
                                                هفت روز ضمانت تعویض
                                            </li>
                                            <li class="checkout-feature-aside-item">
                                                <img src="/DidiKala/assets/img/svg/payment-terms.svg" alt="">
                                                پرداخت در محل با کارت بانکی
                                            </li>
                                            <li class="checkout-feature-aside-item">
                                                <img src="/DidiKala/assets/img/svg/delivery.svg" alt="">
                                                تحویل اکسپرس
                                            </li>
                                        </ul>
                                    </div><div class="resize-sensor" style="position: absolute; inset: 0px; overflow: hidden; z-index: -1; visibility: hidden;"><div class="resize-sensor-expand" style="position: absolute; left: 0; top: 0; right: 0; bottom: 0; overflow: hidden; z-index: -1; visibility: hidden;"><div style="position: absolute; left: 0px; top: 0px; transition: all 0s ease 0s; width: 353px; height: 823px;"></div></div><div class="resize-sensor-shrink" style="position: absolute; left: 0; top: 0; right: 0; bottom: 0; overflow: hidden; z-index: -1; visibility: hidden;"><div style="position: absolute; left: 0; top: 0; transition: 0s; width: 200%; height: 200%"></div></div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>