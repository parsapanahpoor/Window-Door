@if (Model.ColorFullSiteSettings != null && Model.ColorFullSiteSettings.Any())
{
    <!-- Links-->
    <section class="container mb-5 pb-lg-5">
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4 justify-content-center">

            @foreach (var color in Model.ColorFullSiteSettings)
            {
                <!-- Feature item-->
                <div class="col">
                    <div class="card border-0 shadow-sm card-hover h-100">
                        <div class="card-body icon-box">
                            <div class="@color.CircleClass"><i class="@color.TagClass"></i></div>
                            <h3 class="h5 card-title">@color.Title</h3>
                            <p class="card-text fs-sm">
                                @color.Description
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </section>
}

@if (Model.MohasebeyeOnlineGheymat != null)
{
    <section class="container mb-5 pb-2 pb-lg-4">
        <div class="row align-items-center">
            <div class="col-md-5"><img class="d-block mx-md-0 mx-auto mb-md-0 mb-4 rotate-img" src="/FinderSample/img/real-estate/illustrations/calculator.svg" width="416" alt="Illustration"></div>
            <div class="col-xxl-6 col-md-7 text-md-start text-center">
                <h2 class="">محاسبه آنلاین و سریع هزینه درب و پنجره ی دلخواه شما</h2>
