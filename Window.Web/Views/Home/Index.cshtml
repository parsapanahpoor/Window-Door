            </div>
        </div>
    </section>
}


@if (Model.FreeConsultants != null && Model.FreeConsultants.Any())
{
    <section class="position-relative bg-white rounded-xxl-4 mb-5 pb-1 py-md-3 zindex-5" style="margin-top: -30px;">
        <div class="container pt-5 mb-4 mb-md-5">
            <h2 class="text-center ">مشاوره ی رایگان</h2>
            <p class="mb-4 pb-2 mx-auto fs-lg text-center" style="max-width: 616px;">
                افزایش آگاهی شما در دستور کار ما قرار دارد .

            </p>
            <!-- Features grid-->
            <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4 justify-content-center">
                @foreach (var consultant in Model.FreeConsultants)
                {
                    <div class="col">
                        <div class="card border-0 shadow-sm card-hover h-100">
                            <div class="card-body icon-box">
                                <div class="icon-box-media bg-faded-warning text-warning rounded-circle mb-3"><i class="fi-checkbox-checked-alt"></i></div>
                                <h3 class="h5 card-title">@consultant.Title</h3>
                                <p class="card-text fs-sm">@consultant.Description</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
}

