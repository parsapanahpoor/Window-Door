                                            </div>
                                            <div class="btn-group btn-group-lg scale-up delay-3" role="group" aria-label="خرید یا نشان کردن">
                                                <a class="btn btn-primary" asp-action="ShowArticleDetailById" asp-route-id="@item.Id" asp-area="" asp-controller="Article">مشاهده ی جزییات و کسب اطلاعات</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <!-- Item-->
                                <div class="tns-item tns-normal" id="tns1-item1" aria-hidden="true" tabindex="-1">
                                    <div class="row">
                                        <div class="col-lg-8 col-md-7 mb-md-0 mb-3">
                                            <div class="position-relative pr-lg-5">
                                                <div class="position-absolute top-0 start-0 zindex-1 m-3 p-1"><span class="badge bg-info fs-sm me-2">جدید</span><span class="badge bg-success fs-sm me-2">تاییده شده</span></div><img class="rounded-3 zindex-5" src="@FilePaths.ArticleOriginimage/@item.Image" alt="Article image">
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-5">
                                            <span class="d-inline-block fs-sm text-uppercase text-primary mb-2 from-top">پیشنهاد استثنایی</span>
                                            <div class="from-end delay-2">
                                                <h3 class="h4 mb-2">@item.Title</h3>

                                                <p class="mb-4 pb-md-2">@item.ShortDescription</p>
                                            </div>
                                            <div class="btn-group btn-group-lg scale-up delay-3" role="group" aria-label="Buy now or add to wishlist">
                                                <a class="btn btn-primary" asp-action="ShowArticleDetailById" asp-route-id="@item.Id" asp-area="" asp-controller="Article">مشاهده ی جزییات و کسب اطلاعات</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            i++;
                        }

                    </div>
                </div>
            </div>

        </div>
        <!-- Carousel custom controls-->
        <div class="tns-carousel-controls pt-2 mt-4" id="carousel-controls-lp" aria-label="Carousel Navigation" tabindex="0">
            <button class="me-3" type="button" aria-controls="tns1" tabindex="-1" data-controls="prev"><i class="fi-chevron-left fs-xs"></i></button>
            <button type="button" aria-controls="tns1" tabindex="-1" data-controls="next"><i class="fi-chevron-right fs-xs"></i></button>
        </div>
    </section>
}

