@using Window.Web.Culture
@model Window.Domain.ViewModels.User.Authentication.LoginUserViewModel
@{
    ViewData["Title"] = "ورود";
    Layout = "Identity/_IdentityLayout";
    var culture = ApplicationCultures.GetCurrentCulture();
    var isRtl = culture.IsRtl;
}

<div class="login-container animated fadeInDown">
    <form method="post" dir=""ltr" asp-antiforgery="true">
        <div class="loginbox bg-white">
            <div class="loginbox-title">ورود</div>
            
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="All" class="alert alert-danger margin-left-20 margin-right-20 margin-top-10"></div>
            }

            <div class="loginbox-textbox">
                <label asp-for="Mobile">موبایل</label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger small"></span>
            </div>
            
            <div class="loginbox-textbox">
                <label asp-for="Password">کلمه ی عبور</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            
            <div class="loginbox-textbox no-padding-bottom">
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberMe" class="colored-primary" >
                        <span class="text darkgray"> @Localizer["مرا به خاطر بسپار"] </span>
                    </label>
                </div>
            </div>
            
            <div class="loginbox-textbox">
                <a asp-action="ForgotPassword" asp-area="" asp-controller="Identity">@Localizer["فراموشی روز عبور "]</a>
            </div>
            
            <div class="loginbox-textbox">
                <a asp-action="Register">@Localizer["ثبت نام "]</a>
            </div>

            <div class="loginbox-submit mt-3" dir="rtl">
                <input type="submit" class="btn btn-primary" value="@Localizer["ورود"]">
            </div>

        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_SweetAlertLocalizer"/>
}


