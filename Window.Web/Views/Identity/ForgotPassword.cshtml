@model Window.Domain.ViewModels.Account.ForgetPasswordViewModel

@{
    ViewData["Title"] = "بازیابی کلمه ی عبور";
    Layout = "Identity/_IdentityLayout";

}

@section Scripts
{
<partial name="_JqueryValidation" />
}

<div class="p-3" style="background-image: url('/Site/images/banner/banner-bg-112.jpg');  background-position: center; background-size: cover;">
    <div class="container">
        <div class="form-horizontal" style="margin-top:200px;">
            <div class="row mt-5">
                <div class="col-md-3"></div>

                <div class="col-md-6 text-right " style="background-color:#faf6f6; border: 2px double #dbd6d6; border-radius:12px ;">

                        <form asp-action="ForgotPassword" asp-controller="Identity" method="post">

                        <h2>بازیابی کلمه ی عبور</h2>
                        <br />

                        <div class="form-group">
                            <lable class="control-label col-md-2">موبایل</lable>
                            <div class="col-md-10">
                                <input asp-for="Mobile" class="form-control" placeholder="موبایل" />
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="main-btn" style="margin-right:150px ; margin-bottom:20px" type="submit">ارسال کد بازیابی</button>
                                <a class="main-btn" style="margin-bottom:20px ; color:white; " asp-action="login" asp-controller="Identity">ورود</a>
                        </div>

                    </form>

                </div>

                <div class="col-md-3"></div>
            </div>
            <br />
        </div>
    </div>
</div>
