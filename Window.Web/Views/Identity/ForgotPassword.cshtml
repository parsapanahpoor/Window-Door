@model Window.Domain.ViewModels.User.Authentication.ForgotPasswordViewModel

@{
    ViewData["Title"] = " فراموشی رمز عبور";
}

@section Scripts
{
<partial name="_JqueryValidation" />
}

<div class="p-3" style="background-image: url('/Site/images/banner/banner-bg-112.jpg');  background-position: center; background-size: cover;">
    <div class="container">
        <div class="form-horizontal">
            <div class="row mt-5">
                <div class="col-md-3"></div>

                <div class="col-md-6 text-right " style="background-color:#faf6f6; border: 2px double #dbd6d6; border-radius:12px ;">

                        <form asp-action="ForgotPassword" asp-controller="Identity" method="post">

                        <h4 class="text-center mt-3">فراموشی رمز عبور  </h4>
                        <br />

                        <div class="form-group">
                            <lable class="control-label col-md-2">ایمیل</lable>
                            <div class="col-md-10">
                                <input asp-for="Email" class="form-control" placeholder="ایمیل" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="main-btn" style="margin-right:150px ; margin-bottom:20px" type="submit">ارسال</button>
                                <a class="main-btn" style="margin-bottom:20px ; color:white; " asp-action="login" asp-controller="Identity">login</a>
                        </div>

                    </form>

                </div>

                <div class="col-md-3"></div>
            </div>
            <br />
        </div>
    </div>
</div>
