@using Window.Application.StaticTools
@model Window.Domain.ViewModels.User.Authentication.ResetPasswordViewModel


@{
    ViewData["Title"] = " ورود";
}

@section Scripts
{
<partial name="_JqueryValidation" />
}

<div class="p-3" style="background-image: url('/Site/images/banner/banner-bg-112.jpg');  background-position: center; background-size: cover;">
    <div class="container">
        <div class="form-horizontal">
            <div class="row mt-5">
                <div class="col-md-3"></div>

                <div class="col-md-6 text-right " style="background-color:#faf6f6; border: 2px double #dbd6d6; border-radius:12px ;">

                        <form asp-action="ResetPassword" asp-controller="Identity" method="post">

                        <h4 class="text-center mt-3">ورود در سایت </h4>
                        <br />


                        <div class="form-group">
                            <lable class="control-label col-md-2"> کلمه عبور</lable>
                            <div class="col-md-10">
                                <input asp-for="NewPassword" type="password" class="form-control" placeholder="کلمه عبور" />
                                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                            </div>
                        </div>

                           <div class="form-group">
                            <lable class="control-label col-md-2"> تکرار کلمه ی عبور </lable>
                            <div class="col-md-10">
                                    <input asp-for="ReNewPassword" type="password" class="form-control" placeholder=" تکرار کلمه ی عبور    " />
                                    <span class="text-danger" asp-validation-for="ReNewPassword"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="main-btn" style="margin-right:150px ; margin-bottom:20px" type="submit">ارسال</button>
                                <a class="main-btn" style="margin-bottom:20px ; color:white; " asp-action="login" asp-controller="Identity">login</a>
                        </div>

                    </form>

                </div>

                <div class="col-md-3"></div>
            </div>
            <br />
        </div>
    </div>
</div>

