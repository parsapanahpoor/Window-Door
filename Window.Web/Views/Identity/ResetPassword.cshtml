@using Window.Application.StaticTools
@model Window.Domain.ViewModels.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "بازیابی کلمه ی عبور";
    var Time = ViewBag.Time;
    Layout = "Identity/_IdentityLayout";

}

@section Scripts
    {
    <partial name="_JqueryValidation" />

    <script src="~/common/Simple-Countdown-Timer-Plugin-jQuery/jquery.simple.timer.js"></script>
    <script src="~/common/Simple-Countdown-Timer-Plugin-jQuery/examples/bundle.js"></script>
    <script src="~/common/Simple-Countdown-Timer-Plugin-jQuery/examples/dojo.js"></script>

    <script>
        $(function () {

            $("#timer").startTimer({
                onComplete: function () {
                    $("#SMS").css({ 'display': 'block' });
                    $("#timer").css({ 'display': 'none' });
                }
            });

        });
    </script>
}

@section styles
    {
    <style>
        .jst-hours {
            float: left;
        }

        .jst-minutes {
            float: left;
        }

        .jst-seconds {
            float: left;
        }

        .jst-clearDiv {
            clear: both;
        }

        .jst-timeout {
            color: red;
        }
    </style>
}

<div class="p-3" style="background-image: url('/Site/images/banner/banner-bg-112.jpg');  background-position: center; background-size: cover;">
    <div class="container">
        <div class="form-horizontal" style="margin-top:200px;">
            <div class="row mt-5">
                <div class="col-md-3"></div>

                <div class="col-md-6 text-right " style="background-color:#faf6f6; border: 2px double #dbd6d6; border-radius:12px ;">

                    <form asp-action="ResetPassword" asp-controller="Identity" method="post">

                        <h4 class="text-center mt-3">ورود در سایت </h4>
                        <br />


                        <div class="form-group">
                            <lable class="control-label col-md-2"> کد ارسال شده</lable>
                            <div class="col-md-10">
                                <input asp-for="ActiveCode" type="text" class="form-control" placeholder="کد ارسال شده" />
                                <span class="text-danger" asp-validation-for="ActiveCode"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <lable class="control-label col-md-2"> رمز عبور </lable>
                            <div class="col-md-10">
                                <input asp-for="Password" type="password" class="form-control" placeholder=" رمز عبور    " />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <lable class="control-label col-md-2"> تکرار کلمه ی عبور </lable>
                            <div class="col-md-10">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder=" تکرار کلمه ی عبور    " />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>

                        <div class="remember-me-wrap" style="padding-left:50px;">
                            <p class="timerCounter" data-seconds-left="@Time" id="timer"></p>
                        </div>

                        <div class="form-group">
                            <button class="main-btn" style="margin-right:150px ; margin-bottom:20px" type="submit">ارسال</button>
                            <a id="SMS" asp-area="" asp-controller="Identity" asp-action="ResetPassword" asp-route-Mobile="@ViewBag.Mobile" asp-route-Resend="true" class="btn btn-warning" style="display: none"><span> ارسال مجدد کد  </span></a>
                        </div>

                    </form>

                </div>

                <div class="col-md-3"></div>
            </div>
            <br />
        </div>
    </div>
</div>

