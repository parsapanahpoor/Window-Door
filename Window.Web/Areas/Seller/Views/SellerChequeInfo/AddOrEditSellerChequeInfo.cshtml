@using Window.Application.StticTools;
@using Window.Domain.ViewModels.Common
@model Window.Domain.ViewModels.Seller.SellerChequeInfo.SellerChequeInfoSellerSideDTO;

@{
    ViewData["Title"] = "اطلاعات چک های دریافتی فروشنده";
}

@section Styles
{
}

@section Scripts
{
}

@section Breadcrumb
{
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="AddOrEditSellerChequeInfo" asp-controller="SellerChequeInfo" asp-area="Seller" enctype="multipart/form-data">
    <input asp-for="SellerUserId" type="hidden" />

    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">

                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="SellerMaximumDays">نهایت بازهی زمانی که شما چک قبول میکنید</label>
                                <input type="number" class="form-control" asp-for="SellerMaximumDays" placeholder="به عنوان مثال 300 روزه">
                            </div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="CountOfCheque">نهایت تعداد چک هایی که شما قبول میکنید</label>
                                <input type="number" class="form-control" asp-for="CountOfCheque" placeholder="به عنوان مثال 3 چک">
                            </div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

