@model Window.Domain.ViewModels.Seller.PersonalInfo.AddOrEditSellerPersonalVideoDTO

@using Window.Application.StaticTools
@using Window.Web.Culture
@using Window.Application.StticTools
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = " ویدیو";
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section breadcrumb {

    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="EditAndCreateVideos" asp-controller="SellerPersonalInfo" asp-area="Seller" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <input type="hidden" asp-for="imagename" />

    <div class="row">
        <div class="col-lg-9 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="Title">عنوان</label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-3 col-sm-12">
            <div class="row">

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <input type="hidden" asp-for="AttachmentFileName">

                                <div class="col-md-12">
                                    <label for="courseAttachmentFile" class="file-input-style">
                                        <i class="glyphicon glyphicon-upload"></i>
                                        <span class="mr-8px">لطفا فایل ضمیمه را انتخاب کنید .</span>
                                    </label>
                                </div>

                                <div class="col-md-12 mt-10px display-none" id="CourseAttachment" inputId="AttachmentFileName" upload-url="@Url.Action("UploadCourseAttachmentFile", "SellerPersonalInfo", new {area = "Seller"})">
                                    <div class="progress progress-bordered" style="margin-bottom: 10px !important">
                                        <div class="progress-bar progress-bar-blue" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                            <span class="percent"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 mt-10px @((Model != null && !string.IsNullOrEmpty(Model.AttachmentFileName)) ? "" : "display-none")" style="margin-bottom: 5px" id="CourseAttachmentDownloadBox">
                                    <div style="border-radius:10px" class="file-admin-style bg-sky">
                                        <span> فایل ضمیمه </span>
                                        <a asp-action="DownloadAttachmentFile" asp-controller="SellerPersonalInfo" asp-area="Seller" asp-route-fileName="@((Model != null && !string.IsNullOrEmpty(Model.AttachmentFileName)) ? Model.AttachmentFileName : string.Empty)" class="icon-download-style">
                                            <i class="glyphicon glyphicon-cloud-download"></i>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> تصویر  </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <input type="file" class="display-none" name="Image" id="UserAvatar" ImageInput="1" accept=".jpg,.jpeg,.png" />

                                <div class="col-md-12">
                                    <label for="UserAvatar" class="file-input-style">
                                        <i class="glyphicon glyphicon-upload"></i>
                                        <span class="mr-8px"> لطفا یک تصویر را انتخاب کنید</span>
                                    </label>
                                </div>

                                @{
                                    var avatarUrl = FilePaths.DefaultUserAvatar;

                                    if (Model != null && !string.IsNullOrEmpty(Model.imagename))
                                    {
                                        avatarUrl = $"{FilePaths.SellerPersonalVideoAttachmentFilesImagePathThumb}{Model.imagename}";
                                    }
                                }

                                <div class="col-md-12 tc mt-10px">
                                    <img src="@avatarUrl" class="image-style" ImageFile="1" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>

<input type="file" chunk-upload="CourseAttachment" class="display-none" name="courseAttachmentFile" id="courseAttachmentFile" />

