@using Window.Domain.ViewModels.Common
@model Window.Domain.ViewModels.User.Ticket.CreateTicketViewModel
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedLocalizer> SharedHtmlLocalizer
@using Window.Domain.ViewModels.User.Ticket

@{
    ViewData["Title"] = @Localizer["Page Title"];
}


@section Scripts
{
<partial name="_JqueryValidation" />
}

@section breadcrumb
{
<li>
    <a href="javascript:void(0)"> @ViewData["Title"] </a>
</li>
}

    <form method="post" asp-action="CreateTicket" asp-controller="Ticket" asp-area="Seller" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="Title"></label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label >نوع تیکت</label>
                                    <select asp-for="TicketType" class="form-control" asp-items="Html.GetEnumSelectList(typeof(Window.Domain.Enums.Ticket.TicketType))"></select>
                                    <span class="text-danger" asp-validation-for="TicketType"></span>
                                </div>


                                    <div class="form-group col-md-6 col-sm-12">
                                        <label >فایل  </label>
                                        <input class="btn btn-blue" asp-for="MessageFile" type="file">
                                    </div>

                            <div class="clearfix"></div>

                            <div class="form-group col-md-12">
                                <label asp-for="Message"></label>
                                <textarea class="form-control" ck-lang="@ApplicationCultures.GetLanguageCode()" ckeditor="1" asp-for="Message"></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>
                            </div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>@Localizer["Submit"]
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
