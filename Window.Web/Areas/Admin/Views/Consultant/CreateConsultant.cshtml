@using Window.Domain.ViewModels.Common
@using Window.Application.StaticTools
@model Window.Domain.Entities.Counseling.Counseling

@{
    ViewData["Title"] = "افزودن ";
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
    <script src="/admin/js/admin-custom.js"></script>
    <script src="/admin/js/CreateArticle.js"></script>
    <script src="/common/custom/custom.js"></script>
}

    @section breadcrumb {

    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

    <form method="post" asp-action="CreateConsultant" asp-controller="Consultant" asp-area="Admin" enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="widget">
                    <div class="widget-header bordered-bottom bordered-green">
                        <span class="widget-caption"> @ViewData["Title"] </span>
                    </div>
                    <div class="widget-body">
                        <div>

                            <div class="row">

                                <div class="form-group col-md-12 col-sm-12">
                                    <label asp-for="Title">عنوان</label>
                                    <input type="text" class="form-control" asp-for="Title">
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>

                                <div class="clearfix"></div>

                                <div class="form-group col-md-12">
                                    <label asp-for="Description"></label>
                                    <textarea class="form-control" ckeditor="1" asp-for="Description"></textarea>
                                    <span class="text-danger" asp-validation-for="Description"></span>

                                </div>

                            </div>

                            <hr class="margin-bottom-10 margin-top-10" />

                            <div class="row">
                                <div class="col-md-12 flex-style">
                                    <button type="submit" class="btn btn-labeled btn-palegreen">
                                        <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
