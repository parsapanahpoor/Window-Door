@using Window.Domain.Entities
@model Window.Domain.ViewModels.Admin.ShopColor.CreateShopColorDTO

@{
    ViewData["Title"] = "ثبت رنگ";
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section breadcrumb
    {
    <li>
        <a asp-area="Admin" asp-controller="ShopColor" asp-action="FilterShopColors"> مدیریت رنگ ها / </a>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="CreateShopColor" asp-controller="ShopColor" asp-area="Admin">
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
               
                        <span class="widget-caption"> ثبت رنگ  </span>

                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">
                            <div class="form-group col-md-4 col-sm-12">
                                <label asp-for="Title">عنوان رنگ</label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group col-md-4 col-sm-12">
                                <label asp-for="ShopColorCode">کدنمایشی رنگ</label>
                                <input type="text" class="form-control" asp-for="ShopColorCode">
                                <span class="text-danger" asp-validation-for="ShopColorCode"></span>
                            </div>

                            <div class="form-group col-md-4 col-sm-12">
                                <label asp-for="Priority"> الوییت نمایش در سایت</label>
                                <input type="text" class="form-control" asp-for="Priority">
                                <span class="text-danger" asp-validation-for="Priority"></span>
                            </div>
                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>


