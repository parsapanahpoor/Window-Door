@model List<Window.Domain.Entities.SiteSetting.AdminMobiles>

@using Window.Application.Convertors
@using Window.Application.Extensions

@{
    ViewData["Title"] = "لیست موبایل ادمین ها";
}

@section breadcrumb
    {

    <li class="active">@ViewData["Title"]</li>
}
@section Styles
    {
    <link href="/admin/css/dataTables.bootstrap.rtl.css" rel="stylesheet" />
}

@section Scripts
    {
    <partial name="_AdminSweetAlertLocalizer" />

    <script src="~/admin/js/datatable/jquery.dataTables.min.js"></script>
    <script src="~/admin/js/datatable/ZeroClipboard.js"></script>
    <script src="~/admin/js/datatable/dataTables.tableTools.min.js"></script>
    <script src="~/admin/js/datatable/dataTables.bootstrap.min.js"></script>
    <script src="~/admin/js/datatable/datatables-init.js"></script>
    <script>
        InitiateSimpleDataTable.init();
        InitiateEditableDataTable.init();
        InitiateExpandableDataTable.init();
        InitiateSearchableDataTable.init();
    </script>

    }

<div class="page-body">

    <div class="row text-center mb-3">
        <a asp-action="CreateAdminMobile" asp-area="Admin" asp-controller="SiteSetting" class="exlStyle btn btn-primary">افزودن موبایل ادمین  </a>
    </div>

    <div class="row">

        <div id="horizontal-form">

            @if (Model != null && Model.Any())
            {

                <div class="widget-body no-padding">
                    <div id="searchable_wrapper" class="dataTables_wrapper form-inline">

                        <table class="table table-bordered table-hover table-striped dataTable" id="searchable" role="grid" aria-describedby="searchable_info">
                            <thead class="bordered-darkorange">
                                <tr role="row">

                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending">شماره موبایل </th>
                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Platform: activate to sort column ascending">امکانات </th>

                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var mobile in Model)
                                {
                                    <tr role="row" class="even responsive" remove-ajax-item="@mobile.Id">

                                        <td class="center ">

                                            @mobile.AdminMobile

                                        </td>

                                        <td class="sorting_1">

                                            <button onclick="DeleteAjax(@mobile.Id, '@Url.Action("DeleteAdminMobile", "SiteSetting", new {area = "Admin", mobileId = mobile.Id})')" class="btn btn-danger btn-circle btn-xs"><i class="glyphicon glyphicon-trash"></i></button>
                                        </td>

                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <partial name="_AdminNotFoundPartial" />
            }

        </div>
    </div>

</div>


