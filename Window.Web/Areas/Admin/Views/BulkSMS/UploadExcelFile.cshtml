@model Window.Domain.ViewModels.Admin.BulkSMS.UploadExcelFileAdminSideViewModel

@{
    ViewData["Title"] = "آپلود فایل اکسل برای فروشندگان";
}

@section Scripts
    {
}

    @section breadcrumb
    {

    <li class="active">@ViewData["Title"]</li>
}

    <div class="row">
        <div class="col-lg-12 col-sm-12">

            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> لطفا فایل اکسل را انتخاب کنید </span>
                </div>
                <div class="widget-body">
                    <div>

                    <form asp-action="UploadExcelFile" asp-controller="BulkSMS" asp-area="Admin" method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="row">

                                <div class="form-group col-md-12 col-sm-12">
                                    <textarea asp-for="SMSText" class="form-control" asp-for="SMSText">متن پیامک خود را وارد کنید</textarea>
                                </div>

                                    <div class="form-group col-md-12 col-sm-12">
                                        <input type="file" class="form-control" asp-for="ExcelFile">
                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="form-group col-md-12">
                                        <button type="submit" class="btn btn-success">ثبت</button>
                                    </div>

                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>


