@using Window.Application.Convertors
@using Window.Application.StticTools;
@using Window.Domain.ViewModels.Common
@using Window.Domain.ViewModels.Admin.OrderCheque
@model AdminChequeDetailChangeStateDTO;

@{
    ViewData["Title"] = "افزودن محصول جدید";

    ChequeDetailDTO chequeInfo = ViewBag.OrderCheque;
}

@section Styles
{
}

@section Scripts
{
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
{
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="ChequeDetail" asp-controller="OrderCheques" asp-area="Admin" enctype="multipart/form-data">
    <input asp-for="OrderChequeId" type="hidden" />
    <input asp-for="OrderId" type="hidden" />

    <div class="row">
        <div class="col-lg-9 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-primary">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">

                            <div class="form-group col-md-6 col-sm-12">
                                <label>کدملی صاحب حساب</label>
                                <input type="text" class="form-control" readonly value="@chequeInfo.CustomerNationalId">
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label>مبلغ چک</label>
                                <input type="text" class="form-control" readonly value="@chequeInfo.ChequePrice.ToString("#,000")">
                            </div>

                            <div class="clearfix"></div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label>تاریخ چک</label>
                                <input type="text" class="form-control" readonly value="@chequeInfo.ChequeDateTime.ToShamsi()">
                            </div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label>وضعیت توسط فروشنده</label>
                                @if (chequeInfo.OrderChequeSellerState == Window.Domain.Enums.Order.OrderChequeSellerState.Accept)
                                {
                                    <input type="text" class="form-control" readonly value="تایید شده توسط فروشنده">
                                }
                                @if (chequeInfo.OrderChequeSellerState == Window.Domain.Enums.Order.OrderChequeSellerState.WaitingForCheck)
                                {
                                    <input type="text" class="form-control" readonly value="در انتظار بررسی فروشنده">
                                }
                                @if (chequeInfo.OrderChequeSellerState == Window.Domain.Enums.Order.OrderChequeSellerState.Reject)
                                {
                                    <input type="text" class="form-control" readonly value="رد شده توسط فروشنده">
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(chequeInfo.SellerRejectDescription))
                            {
                                <div class="clearfix"></div>

                                <div class="form-group col-md-12">
                                    <label>دلیلی که فروشنده برای رد چک عنوان کرده است.</label>
                                    <textarea readonly rows="10" class="form-control">@chequeInfo.SellerRejectDescription</textarea>
                                </div>
                            }

                        </div>
                        
                            <hr class="margin-bottom-10 margin-top-10" />

                            <div class="form-group col-md-12 col-sm-12">
                                <label>تعیین وضعیت چک</label>
                                <select asp-for="OrderChequeAdminState" class="form-control" asp-items="Html.GetEnumSelectList(typeof(Window.Domain.Enums.Order.OrderChequeAdminState))"></select>
                                <span class="text-danger" asp-validation-for="OrderChequeAdminState"></span>
                            </div>

                        <div class="clearfix"></div>

                        <div class="form-group col-md-12 ">
                            <label>دلیل رد چک را برای بررسی خریدار و فروشنده یادداشت بفرمایید</label>
                            <textarea asp-for="AdminRejectDescription" rows="10" class="form-control" placeholder="دلیل رد چک را برای بررسی خریدار و فروشنده یادداشت بفرمایید"></textarea>
                            <span asp-validation-for="AdminRejectDescription" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-primary">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-3 col-sm-12">
            <div class="row">

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-primary">
                            <span class="widget-caption"> تصویر چک </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <div class="col-md-12 tc mt-10px">
                                    <a href="@FilePaths.OrderChequePath/@chequeInfo.ChequeImage" target="_blank">
                                        <img src="@FilePaths.OrderChequePathThumb/@chequeInfo.ChequeImage" class="image-style" ImageFile="1" />
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

