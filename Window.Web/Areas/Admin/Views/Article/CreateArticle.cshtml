@using Window.Domain.ViewModels.Common
@using Window.Application.StaticTools
@model Window.Domain.ViewModels.Article.Admin.CreateArticleAdminViewModel

@{
    ViewData["Title"] = "افزودن مقاله ی جدید";
}

@section Scripts
{
<partial name="_JqueryValidation" />
<script src="/admin/js/admin-custom.js"></script>
<script src="/admin/js/CreateArticle.js"></script>
<script src="/common/custom/custom.js"></script>
}

@section breadcrumb {

<li>
    <a href="javascript:void(0)"> @ViewData["Title"] </a>
</li>
}

<form method="post" asp-action="CreateArticle" asp-controller="Article" asp-area="Admin" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-9 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Title"></label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="AuthorId">نویسنده ی مقاله </label>
                                <input type="hidden" asp-for="AuthorId" id="Owner-Input">
                                <input type="text" class="form-control" asp-for="AuthorName" id="Owner-Display" readonly="readonly" />
                                <span onclick="ShowSearchUserModal('Owner')" class="search-btn"><i class="glyphicon glyphicon-search"></i></span>
                                <span class="text-danger" asp-validation-for="AuthorId"></span>

                            </div>
                            <div class="clearfix"></div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="ShortDescription"></label>
                                <input type="text" class="form-control" asp-for="ShortDescription">
                                <span class="text-danger" asp-validation-for="ShortDescription"></span>
                            </div>

                            <div class="clearfix"></div>

                            <div class="form-group col-md-12">
                                <label asp-for="Description"></label>
                                <textarea class="form-control" ckeditor="1" asp-for="Description"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>

                            </div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-3 col-sm-12">
            <div class="row">

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> تصویر مقاله   </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <input type="file" class="display-none" name="ArticleImage" id="ArticleImage" ImageInput="1" accept=".jpg,.jpeg,.png" />

                                <div class="col-md-12">
                                    <label for="ArticleImage" class="file-input-style">
                                        <i class="glyphicon glyphicon-upload"></i>
                                        <span class="mr-8px">لطفا  تصویر مقاله را انتخاب کنید .</span>
                                    </label>
                                </div>

                                <div class="col-md-12 tc mt-10px">
                                    <img src="@Window.Application.StticTools.FilePaths.DefaultSellerInfoImage" class="Article-Priew" ImageFile="1" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> وضعیت </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" asp-for="IsActive">
                                                <span class="text"> فعال </span>
                                            </label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
