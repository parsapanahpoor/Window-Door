@model Window.Domain.ViewModels.Admin.ShopBrand.FilterShopBrandDTO
@{
    ViewData["Title"] = "فیلتر برندهای فروشگاه";
}

@section Styles
    {

}

@section Scripts
    {
    <partial name="_AdminSweetAlertLocalizer" />
}

@section breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<div class="row">
    <div class="col-lg-3 col-sm-12">

        <a class="btn btn-sky w-100 margin-bottom-10" asp-action="CreateShopBrand" asp-controller="ShopBrand" asp-area="Admin">ایجاد برند   جدید </a>

        <div class="widget">
            <div class="widget-header bordered-bottom bordered-green">

                <span class="widget-caption"> فیلتر برند  </span>

            </div>
            <div class="widget-body">
                <div>
                    <form asp-action="FilterShopBrands" asp-controller="ShopBrand" asp-area="Admin" id="filter-search" method="get">
                        <input type="hidden" asp-for="Page" />

                        <div class="form-group">
                            <label asp-for="Title">عنوان </label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled w-100 btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-filter"></i>اعمال فیلتر
                                </button>

                                @if (Context.Request.QueryString.HasValue)
                                {
                                    <a asp-area="Admin" asp-controller="ShopBrand" asp-action="FilterShopBrand" class="btn btn-labeled w-100 btn-darkorange mr-10px">
                                        <i class="btn-label glyphicon glyphicon-remove"></i>حذف فیلتر
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-9 col-sm-12">
        <div class="well with-header with-footer table-responsive">
            <div class="header bordered-azure">
                <div class="flex-style">

                    <span> لیست برند  فروشگاه </span>

                    <span>@Model.GetShownEntitiesPagesTitle()</span>
                </div>
            </div>

            @if (Model.Entities != null && Model.Entities.Any())
            {
                <table class="table table-hover table-bordered tc vm">
                    <thead class="tc vm">
                        <tr class="tc vm">
                            <th class="tc vm">
                                عنوان
                            </th>
                            <th class="tc vm">
                                الوییت نمایش
                            </th>
                            <th class="tc vm">
                                امکانات
                            </th>
                        </tr>
                    </thead>
                    <tbody class="tc vm">
                        @foreach (var ShopBrand in Model.Entities)
                        {
                            <tr class="tc vm" remove-ajax-item="@ShopBrand.Id">

                                <td class="tc vm" style="max-width: 200px">
                                    <p> @ShopBrand.ShopBrandTitle </p>
                                </td>

                                <td class="tc vm" style="max-width: 200px">
                                    <p> @ShopBrand.Priority </p>
                                </td>

                                <td class="tc vm">

                                    <a asp-action="EditShopBrand" asp-controller="ShopBrand" asp-area="Admin" asp-route-id="@ShopBrand.Id" class="btn btn-warning btn-circle btn-xs"><i class="glyphicon glyphicon-edit"></i></a>

                                    <button onclick="DeleteAjax(@ShopBrand.Id, '@Url.Action("DeleteShopBrand", "ShopBrand", new {area = "Admin", ShopBrandId = ShopBrand.Id})')" class="btn btn-danger btn-circle btn-xs"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>

                <div class="footer tc">

                    <partial name="_AdminPaging" model="@Model.GetCurrentPaging()" />

                </div>
            }
            else
            {
                <partial name="_AdminNotFoundPartial" />
            }
        </div>
    </div>
</div>



