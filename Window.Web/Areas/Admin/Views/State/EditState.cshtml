@model Window.Domain.ViewModels.Admin.State.EditStateViewModel
@{
    ViewData["Title"] = "ویرایش مکان";
}

@section Scripts
{
<partial name="_JqueryValidation" />
}

@section breadcrumb
{
<li>
    <a href="javascript:void(0)"> @ViewData["Title"] </a>
</li>
}

<form method="post" asp-action="EditState" asp-controller="State" asp-area="Admin">
    <input type="hidden" asp-for="StateId"/>
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>
                        
                        <input type="hidden" asp-for="ParentId"/>

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Title"></label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="UniqueName"></label>
                                <input type="text" class="form-control" asp-for="UniqueName">
                                <span class="text-danger" asp-validation-for="UniqueName"></span>
                            </div>
                        </div>

                        <hr class="margin-bottom-10 margin-top-10"/>

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-warning">
                                    <i class="btn-label glyphicon glyphicon-edit"></i>ویرایش
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

